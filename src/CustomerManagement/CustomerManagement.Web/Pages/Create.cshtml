@page
@model CustomerManagement.Web.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Customer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerViewModel.Name" class="control-label"></label>
                <input asp-for="CustomerViewModel.Name" class="form-control" />
                <span asp-validation-for="CustomerViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerViewModel.Address" class="control-label"></label>
                <input asp-for="CustomerViewModel.Address" class="form-control" />
                <span asp-validation-for="CustomerViewModel.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerViewModel.PhoneNumber" class="control-label"></label>
                <input asp-for="CustomerViewModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="CustomerViewModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div>
                <br/>
                <input type="submit" value="Create" class="btn btn-primary"/> | | <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
